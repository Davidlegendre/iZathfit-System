<ui:UiWindow 
        x:Class="iZathfit.Views.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iZathfit.Views.Windows"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        ResizeMode="NoResize"
        mc:Ignorable="d"
        Title="Login" Height="326" Width="568" Background="{ui:ThemeResource}" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <!--<Rectangle Fill="{ui:ThemeResource}" Opacity="0.65"></Rectangle>-->
        <ui:Button x:Name="btnclick" Click="btnclick_Click" VerticalAlignment="Top" Appearance="Primary" WindowChrome.IsHitTestVisibleInChrome="True">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ui:SymbolIcon  Symbol="Mail20"></ui:SymbolIcon>
                <TextBlock Grid.Column="1" Margin="10,0,0,0" Text="login"></TextBlock>
            </Grid>
        </ui:Button>
       
    </Grid>
</ui:UiWindow>
